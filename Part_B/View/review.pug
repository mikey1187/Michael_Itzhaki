doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/CSS.css')
  script(defer='' src='/JS.js')
  title Add A Review
body 
  div.ReviewBody
    h1.header  Add A New Review
    .form
      form(name='addReview' onsubmit='return validateForm()' action='/addReview' method='post')
        label(for='email') Email
        br
        input#email(pattern='[^ @]*@[^ @]*' type='text' name='email')
        br
        label(for='doctorName')  Doctor Name:
        br
        input#doctorName(type='text' name='doctorName')
        br
        br
        .starReview
          i.star &star;
          i.star &star;
          i.star &star;
          i.star &star;
          i.star &star;
        input(type='hidden' id='rating' name='rating' value='0')
        br
        br
        input(type='submit' value='Submit')
